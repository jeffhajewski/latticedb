{
  "name": "lattice-db",
  "version": "0.1.0",
  "description": "TypeScript bindings for Lattice embedded knowledge graph database",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "build:native": "node-gyp rebuild",
    "build:native:cmake": "cmake-js compile",
    "build:all": "npm run build:native && npm run build",
    "test": "jest",
    "lint": "eslint src --ext .ts",
    "clean": "rm -rf dist build",
    "prepare": "npm run build:all",
    "prepublishOnly": "npm test"
  },
  "keywords": [
    "database",
    "graph",
    "vector",
    "embeddings",
    "rag",
    "ai",
    "knowledge-graph",
    "cypher",
    "hnsw",
    "bm25"
  ],
  "author": "Jeff Hajewski <jeff@latticedb.dev>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jeffhajewski/latticedb"
  },
  "homepage": "https://github.com/jeffhajewski/latticedb#readme",
  "bugs": {
    "url": "https://github.com/jeffhajewski/latticedb/issues"
  },
  "files": [
    "dist",
    "src/native",
    "binding.gyp",
    "include",
    "prebuilds"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "koffi": "^2.9.0",
    "node-addon-api": "^7.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "cmake-js": "^7.4.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "node-gyp": "^10.0.0",
    "ts-jest": "^29.0.0",
    "typescript": "^5.0.0"
  },
  "gypfile": true
}
